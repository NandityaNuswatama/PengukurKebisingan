<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PengukurKebisingan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorPrimaryVariant">@color/blue_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_accent</item>
        <item name="colorSecondaryVariant">@color/blue_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline1">@style/Headline1</item>
        <item name="textAppearanceHeadline2">@style/Headline2</item>
        <item name="textAppearanceHeadline3">@style/Headline3</item>
        <item name="textAppearanceHeadline4">@style/Headline4</item>
        <item name="textAppearanceHeadline5">@style/Headline5</item>
        <item name="textAppearanceBody1">@style/Body1</item>
        <item name="textAppearanceBody2">@style/Body2</item>

        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/allerta</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Headline2" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/allerta</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/allerta</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/allerta</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/allerta</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/allerta</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/allerta</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="navigationIcon">@drawable/img_logo_app_24</item>
        <item name="android:background">@color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="paddingStart">16dp</item>
    </style>

    <style name="ToolbarNavTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">?attr/colorOnSecondary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">?attr/textAppearanceHeadline2</item>
        <item name="navigationIconTint">?attr/colorOnSecondary</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="BottomSheetTheme" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetTheme</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>